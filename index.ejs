<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
    <title>
        Web-Registration
    </title>
</head>

<body class="bg-warning">
    <div class="container-fluid bg-secondary">
        <div class="row">
            <div class="col-md-6 col-12 offset-md-3 text-center">
                <h2 class="m-5">Welcome to Registration</h2>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-12 offset-md-3 text-center mt-5">
                <a href="/reg" class="mt-5">Click here to Register</a>
            </div>
        </div>
    </div>
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <% if( user.length>0 ) { %>
                    <table class="table table-bordered table-condensed table-striped table-dark text-center">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Address</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% user.forEach(function(userInfo, index){ %>
                                <tr>
                                    <th scope="row">
                                        <%= index + 1 %>
                                    </th>
                                    <td>
                                        <%= userInfo.name %>
                                    </td>
                                    <td>
                                        <%= userInfo.address %>
                                    </td>
                                    <td>
                                        <%= userInfo.phone %>
                                    </td>
                                    <td>
                                        <a href="/show/<%= userInfo._id %>" class="p-2">
                                            <i class="fa fa-eye-slash"></i>
                                        </a>
                                        <a href="/edit/<%= userInfo._id %>" class="p-2">
                                            <i class="far fa-edit"></i>
                                        </a>
                                        <a href="/delete/<%= userInfo._id %>" class="p-2">
                                            <i class="far fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% } else {%>
                        <p class="text-uppercase text-center">No Records Available</p>
                        <% } %>

            </div>
        </div>
    </div>
    <script>

    </script>
</body>

</html>